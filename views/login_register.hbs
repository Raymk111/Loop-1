<div class="col-md-8 col-md-offset-2">
    <h2>Login to account</h2>
    <form class="form-horizontal" role="form" id="log-form">
        <div class="form-group mt">
            <div class="col-sm-10 col-sm-offset-2">
            <div class="col-sm-3">
                <label for="inputUsername" class="control-label">Username</label>
            </div>
            <div class="col-sm-9">
                <input type="text" class="form-control input-lg required" id="inputUsername" placeholder="@username">
            </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-10 col-sm-offset-2">
            <div class="col-sm-3">
                <label for="inputPassword" class="control-label">Password</label>
            </div>
            <div class="col-sm-9">
                <input type="password" class="form-control input-lg required" id="inputPassword"
                       placeholder="Password">
            </div>
        </div>
        <div class="form-group" style="padding-top:60px">
            <div class="row col-sm-4" style="padding-left:20%">
                <button type="submit" class="btn btn-warning btn-lg">Login</button>
            </div>
            <div class="g-signin2 row col-sm-2" data-onsuccess="onSignIn" style="padding-top: 7px"></div>
            <div class="g-signin2 row col-sm-6" data-onsuccess="onRegIn" style="padding-top: 7px"></div>
        </div>
    </form>
</div>
</div>


